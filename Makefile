# --------------------------------------------------------------------------- #
# Variables                                                                   #
# --------------------------------------------------------------------------- #

# The list of meshes containing a Makefile
MESHES_MAKEFILE := $(wildcard */Makefile)
MESHES := $(MESHES_MAKEFILE:%/Makefile=%)

# --------------------------------------------------------------------------- #
# Targets                                                                     #
# --------------------------------------------------------------------------- #

# Apply targets on all meshes
%:
	@$(foreach M,$(MESHES), $(MAKE) -C $M $@;)
